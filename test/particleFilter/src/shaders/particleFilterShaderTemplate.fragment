#version 120

uniform float seed;
uniform bool init = false;

void initParticle();
void stepParticle();
float random(vec2 co);

void main() {
	if(init)
		initParticle();
	else
		stepParticle();

}



void initParticle(){
	//gl_FragColor = vec4(gl_PointCoord.xy, 0.0, 1.0); 
	gl_FragColor = vec4(sin(gl_FragCoord.x), sin(gl_FragCoord.y), seed, 1.0); 

}


void stepParticle(){

}

float random(vec2 co){
	float a = 12.9898;
	float b = 78.233;
	float c = 43758.5453;
	float dt= dot(co.xy ,vec2(a,b));
	float sn= mod(dt,3.14);
	return fract(sin(sn) * c);
}