#version 120

uniform float seed;
uniform bool init = false;

void initParticle();
void stepParticle();

// ---------------- Noise ------------------------
float hash( vec2 p );

// ---------------- main ------------------------
void main() {
	if(init)
		initParticle();
	else
		stepParticle();

}



void initParticle(){
	//gl_FragColor = vec4(gl_FragCoord.xy, 0.0, 1.0); 
	gl_FragColor = vec4(hash(gl_FragCoord.xy), hash(gl_PointCoord.xy), 0.0, 1.0); 

}


void stepParticle(){

}

// ---------------- Noise ------------------------
float hash(vec2 p) {
	float h = dot(p,vec2(127.1,311.7))*seed;	
    return fract(sin(h)*43758.5453123);
}